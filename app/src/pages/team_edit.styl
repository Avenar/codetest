.team-edit__background
  position relative

.team-edit__display
  position relative

.team-edit__button-save
  border-radius 10px
  padding 10px 20px
  background-color green
  color white
  margin-top 25px
  margin-left 25px
  display inline-block
  
.team-edit__button-cancel
  border 2px solid black
  border-radius 10px
  padding 10px 20px
  background-color white
  margin-top 25px
  margin-left 25px
  display inline-block
  
.team-edit__button-delete
  border-radius 10px
  padding 10px 20px
  background-color red
  color white
  margin-top 25px
  margin-left 25px
  display inline-block
  
.team-edit__button-remove
  border-radius 10px
  padding 5px 10px
  background-color red
  color white
  margin-top 25px
  margin-left 25px
  display inline-block